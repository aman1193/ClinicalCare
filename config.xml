<widget id="com.myapp.mobile" version="2.25" xmlns="http://www.w3.org/ns/widgets">


    <name>Clinical Care</name>

    <description>
        Amazing app.
    </description>

    <author href="http://phonegap.com" email="support@phonegap.com">
